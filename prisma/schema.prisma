generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model HomePageData {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  tagline     String
  socialIcons SocialIcons[]
}

model SocialIcons {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  url            String        @unique
  HomePageData   HomePageData? @relation(fields: [homePageDataId], references: [id], onDelete: Cascade)
  homePageDataId String?       @db.ObjectId
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String   @unique
  firstName String
  lastName  String
  email     String   @unique
  imgUrl    String
  isAdmin   Boolean? @default(false)
}
